[Unit]
Description=Calico Node agent
Documentation=https://docs.tigera.io/calico-enterprise/latest/about/
Requires=network.target
After=network.target

[Service]
Type=notify
EnvironmentFile=-/etc/calico/calico-node/calico-node.env
ExecStartPre=/usr/bin/calico-noncluster-host-init
ExecStart=/usr/bin/calico-node -felix -felix-config /etc/calico/calico-node/calico-node.conf
NotifyAccess=main
Restart=always
WatchdogSec=60 

[Install]
WantedBy=multi-user.target
